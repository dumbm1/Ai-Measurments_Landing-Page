doctype html
html(lang='en')
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")

        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
        link(rel="stylesheet" href="css/styles.css")

        title Extension Panel for Adobe Illustrator, that make vector dimensions and measurments

    body.body
        section
            .wrapper
                section

                    include blocks/header

                    .container-xl.mt-5.mb-4
                        h3(class="description_h3" data-toggle="collapse" data-target="#collapse-learn-install" aria-expanded="false") Install & go!

                    .container-xl
                        .row
                            .col
                                div(class="collapse" id="collapse-learn-install")

                                    .row.align-items-center.mt-4.mb-4
                                        .description.col-xl-4
                                            include blocks/description__install_auto
                                        .description.col-xl-8
                                            include blocks/tutorial__install_auto

                                    .row.align-items-center.mt-4.mb-4
                                        .description.col-xl-4
                                            include blocks/description__install_manual
                                        .description.col-xl-8
                                            include blocks/tutorial__install_manual

                    .container-xl.mt-4.mb-4
                        h3(class="description_h3" data-toggle="collapse" data-target="#collapse-learn-enjoy" aria-expanded="false")
                            span.text-block Enjoy this
                            span.d-none.d-md-inline-block.d-lg-inline-block - save you time & brain cells
                            span !

                    .container-xl
                        .row
                            .col
                                div(class="collapse" id="collapse-learn-enjoy")

                                    .row.align-items-center.mt-4.mb-4
                                        .description.col-xl-4
                                            include blocks/description__use_linear
                                        .description.col-xl-8
                                            include blocks/tutorial__use_linear

                                    .row.align-items-center.mt-4.mb-4
                                        .description.col-xl-4
                                            include blocks/description__use_radius_diameter
                                        .description.col-xl-8
                                            include blocks/tutorial__use_radius_diameter

                    .container-xl.mt-4.mb-4
                        h3(class="description_h3" data-toggle="collapse" data-target="#collapse-learn-extand" aria-expanded="false")
                            span.d-none.d-sm-inline-block.d-lg-inline-block.d-xl-inline-block Go deep down...
                            span.d-inline-block.d-sm-none.d-md-none.d-lg-none.d-xl-none Go deep..

                    .container-xl
                        .row
                            .col
                                div(class="collapse" id="collapse-learn-extand")

                                    .row.align-items-center.mt-4.mb-4
                                        .description.col-xl-4
                                            include blocks/description__use_between2objects
                                        .description.col-xl-8
                                            include blocks/tutorial__use_between2objects

                div

                include blocks/footer

        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous")

        script(src='js/headerSmartScroll.js')
